<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCourseActivity">
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:id="@+id/spinCtg"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:ems="4" />

                <EditText
                    android:id="@+id/editCourseNum"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:ems="3"
                    android:hint="Number"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/editCourseName"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:ems="30"
                    android:hint="Course Name"
                    android:inputType="textPersonName" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editSection"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:hint="Section"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/editCredit"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:ems="1"
                    android:hint="Credits"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/editLocation"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:ems="30"
                    android:hint="Location"
                    android:inputType="textPersonName" />

            </LinearLayout>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editProf"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:hint="Professor"
                    android:inputType="textPersonName" />

            </LinearLayout>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txvStartTime"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:text="Starting Time"
                    android:textSize="21sp" />

                <Button
                    android:id="@+id/btnPickStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Change" />

            </LinearLayout>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txvEndTime"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:text="Ending Time"
                    android:textSize="21sp" />

                <Button
                    android:id="@+id/btnPickEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Change" />

            </LinearLayout>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txvStartDate"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:text="Starting Date"
                    android:textSize="21sp" />

                <Button
                    android:id="@+id/btnPickStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Change" />

            </LinearLayout>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txvEndDate"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:text="Ending Date"
                    android:textSize="21sp" />

                <Button
                    android:id="@+id/btnPickEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Change" />

            </LinearLayout>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txvResult"
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:text="Result"
                    android:textSize="20dp" />

            </LinearLayout>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="280dp"
                    android:text="Add" />

            </LinearLayout>

        </TableRow>


    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>